<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Consultations</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .manage {
        max-width: 800px;
        margin: auto;
        padding: 20px;
      }
      h1 {
        text-align: center;
        color: #007bff;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
      }
      th {
        background-color: #007bff;
        color: white;
      }
      .edit-btn,
      .delete-btn {
        padding: 5px 10px;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .edit-btn {
        background-color: #28a745;
      }
      .delete-btn {
        background-color: #dc3545;
      }
      .edit-btn:hover {
        background-color: #218838;
      }
      .delete-btn:hover {
        background-color: #c82333;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <h2 class="logo">Haki Hub</h2>

        <nav class="nav" id="main-nav">
          <ul class="nav-list">
            <li><a href="/">Home</a></li>
            <li><a href="/legal-resources">Legal Resources</a></li>
            <li><a href="/lawyer">Lawyers</a></li>
            <li class="dropdown">
              <a href="#" class="nav-link">Consultations</a>
              <ul class="dropdown-content">
                <li><a href="/book-consultation">Booking page</a></li>
                <li><a href="/manage-consultation">Management page</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="nav-link">Profile</a>
              <ul class="dropdown-content">
                <li><a href="/user">Users</a></li>
                <li><a href="/lawyersProfile">Lawyers</a></li>
              </ul>
            </li>
          </ul>
        </nav>

        <div class="header-actions">
          <div class="search-container">
            <input type="text" placeholder="Search..." class="search-input" />
            <i class="fas fa-search"></i>
          </div>
          <a href="/login" class="user-icon"><i class="fas fa-user"></i></a>
          <a href="/Ai" class="openAi"
            ><img src="/images/ChatGPT-Logo-removebg-preview.png" alt=""
          /></a>
        </div>

        <button class="menu-toggle" id="menu-toggle" aria-label="Toggle menu">
          <i class="fas fa-bars"></i>
          <i class="fas fa-times"></i>
        </button>
      </div>
    </header>
    <div class="manage">
      <h1>Manage Consultations</h1>
      <table>
        <thead>
          <tr>
            <th>Client Name</th>
            <th>Lawyer Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% consultations.forEach(function(consultation) { %>
          <tr>
            <td><%= consultation.clientName %></td>
            <td><%= consultation.lawyerName %></td>
            <td><%= consultation.date %></td>
            <td><%= consultation.time %></td>
            <td><%= consultation.status || 'Scheduled' %></td>
            <!-- Assuming default status is 'Scheduled' -->
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
